#!/usr/bin/env bash
exec "$(dirname $0)/truffleruby" "$(dirname $0)/irb" "$@" # ignored by Ruby interpreter
#!ruby
# ^ marks start of Ruby interpretation

#
#   irb.rb - intaractive ruby
#   	$Release Version: 0.7.3 $
#   	$Revision$
#   	$Date$
#   	by Keiju ISHITSUKA(keiju@ishitsuka.com)
#

require "irb"

if __FILE__ == $0
  IRB.start(__FILE__)
else
  # check -e option
  if /^-e$/ =~ $0
    IRB.start(__FILE__)
  else
    IRB.setup(__FILE__)
  end
end
